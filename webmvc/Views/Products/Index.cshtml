@model IEnumerable<BAL.Domain.ProductDto>

@{
    ViewBag.Title = "SẢN PHẨM";
}

<div class="container mb-5">
    <div class="row">
        <div class="col-lg-3">
            <div class="side-bar">
                <div class="list-group mb-40">
                    <div class="list-group-item disabled list-group-title"><i class="fa fa-bars fa-fw"></i> Danh Mục Sản Phẩm</div>
                    @foreach (var cat in ViewBag.Categories)
                    {
                        <a href="/products?cat=@cat.Id" class="list-group-item list-group-item-action "><i class="fa fa-angle-right fa-fw"></i> @cat.Name (@cat.ProductCount)</a>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="posts blog mb-5">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <a href="/products/@item.MetaTitle" class="h-100 w-100">
                                <div class="card card-product h-100 shadow border-0">
                                    <img class="card-img-top" src="@item.Image">
                                    <div class="card-body d-flex flex-column justify-content-between">
                                        <div>
                                            <h5 class="card-title">@item.Name</h5>
                                            <span class="text-muted small d-block">@item.Category.Name</span>
                                        </div>
                                        <span class="btn btn-outline-danger btn-block btn-sm mt-2">Xem Chi Tiết</span>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</div>